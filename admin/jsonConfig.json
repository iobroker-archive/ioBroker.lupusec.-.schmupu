{
    "i18n": "src/i18n",
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Main Settings",
            "items": {
                "alarm_hostname": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Hostname",
                    "help": "IP or hostname of your Lupusec alarm system (alternativ with port)"
                },
                "alarm_https": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "https"
                },
                "alarm_user": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Username"
                },
                "alarm_password": {
                    "type": "password",
                    "repeat": false,
                    "visible": false,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Password"
                },
                "alarm_polltime": {
                    "newLine": true,
                    "type": "number",
                    "sm": 12,
                    "md": 4,
                    "lg": 1,
                    "min": 0.25,
                    "max": 120,
                    "step": 0.25,
                    "label": "Polltime in seconds"
                },
                "option_pollfaster": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Read faster new Status (higher CPU workload, needs more memory)",
                    "hidden": "true"
                }
            }
        },
        "_webcam": {
            "type": "panel",
            "label": "Webcam Settings",
            "items": {
                "webcam_providing": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Provide Lupusec Webcams"
                },
                "webcam_bind": {
                    "newLine": true,
                    "type": "ip",
                    "listenOnAllPorts": true,
                    "sm": 12,
                    "md": 8,
                    "lg": 6,
                    "label": "Webcam Listen IP"
                },
                "webcam_port": {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "sm": 12,
                    "md": 4,
                    "lg": 1,
                    "label": "Webcam Listen Port"
                }
            }
        },
        "_nuki": {
            "type": "panel",
            "label": "Nuki Settings",
            "items": {
                "nuki_doorsensors": {
                    "newLine": true,
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Nuki connection to door/windows devices",
                    "items": [
                        {
                            "type": "selectSendTo",
                            "attr": "nuki",
                            "width": "40%",
                            "title": "Nuki devices",
                            "tooltip": "Choose your Nuki device",
                            "filter": false,
                            "sort": false,
                            "jsonData": "{\"config\":{\"nuki\":\"\"}}",
                            "command": "sendNuki",
                            "style": {
                                "width": "100%"
                            }
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "door",
                            "width": "40%",
                            "title": "Door devices",
                            "tooltip": "Choose your door device",
                            "filter": false,
                            "sort": false,
                            "jsonData": "{\"config\":{\"door\":\"\"}}",
                            "command": "sendDoor",
                            "style": {
                                "width": "100%"
                            }
                        }
                    ]
                }
            }
        }
    }
}
